---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";
import NavigationBar from "../components/NavigationBar.astro";
import Footerdiv from "../components/Footer.astro";
---

<Layout title="欢迎来到Astro">
    <main>
        <html lang="zh">
            <head>
                <meta charset="UTF-8" />
                <meta
                    name="viewport"
                    content="width=device-width, initial-scale=1.0"
                />
                <title>欢迎来到Astro</title>
                <style>
                    body,
                    html {
                        height: 100%;
                        margin: 0;
                        font-family: "Segoe UI", Tahoma, Geneva, Verdana,
                            sans-serif;
                        background: linear-gradient(
                            to right,
                            #ffc0cb,
                            white
                        ); /* 粉色到白色的渐变 */
                    }

                    /* 导航栏容器样式 */
                    .nav-container {
                        display: flex;
                        justify-content: center;
                        padding: 10px 0; /* 根据需要调整内边距 */
                    }

                    /* 导航栏样式，假设NavigationBar组件内部包含列表 */
                    .nav-links {
                        list-style: none;
                        padding: 0;
                    }

                    .nav-links li {
                        display: inline;
                        margin: 0 15px; /* 导航项之间的间距 */
                    }

                    /* 页面主要内容区域 */
                    .main-content {
                        text-align: center;
                        padding: 20px;
                        background-color: rgba(
                            255,
                            255,
                            255,
                            0.8
                        ); /* 半透明白色背景，提高可读性 */
                        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* 添加阴影 */
                        border-radius: 8px; /* 边框圆角 */
                        margin: 50px 0; /* 上下边距 */
                    }

                    .text-gradient {
                        background: linear-gradient(to right, #ffc0cb, white);
                        -webkit-background-clip: text;
                        -webkit-text-fill-color: transparent;
                        background-clip: text;
                        color: transparent; /* 标准CSS属性 */
                    }

                    a {
                        color: #007bff;
                        text-decoration: none;
                    }

                    a:hover {
                        text-decoration: underline;
                    }
                    /* 页脚样式 */
                    .footer {
                        background-color: #333;
                        color: white;
                        text-align: center; /* 文本水平居中 */
                        padding: 10px 0;
                        position: fixed; /* 固定在底部 */
                        left: 0;
                        bottom: 0;
                        width: 100%;
                        box-sizing: border-box;
                    }
                    /* 响应式设计 */
                    @media (max-width: 600px) {
                        .nav-links li {
                            display: block;
                            margin: 5px 0;
                        }

                        .main-content {
                            margin: 20px; /* 在小屏幕上减小边距 */
                        }
                    }
                </style>
            </head>
            <body>
                <!-- 导航栏容器 -->
                <div class="nav-container">
                    <!-- 导航栏组件 -->
                    <NavigationBar />
                </div>

                <!-- 页面主要内容 -->
                <div class="main-content">
                    <h1>欢迎来到 <span class="text-gradient">Astro</span></h1>
                    <h2>P211012582 <a href="http://www.baidu.com">马丽</a></h2>
                    <p>马丽的考研网站</p>
                    <!-- 链接卡片列表 -->
                    <ul role="list" class="link-card-grid">
                        <!-- 假设Card组件接受href, title, body属性 -->
                        <Card
                            href="https://yz.chsi.com.cn//"
                            title="中国研究生招生信息网"
                            body="看5个内容：考研资讯、近五年考研分数及趋势图、考研专业知识库、考研百科、考研院校库."
                        />
                        <Card
                            href="http://chinakaoyan.com//"
                            title="中国考研网"
                            body="查询各个院校详细的考研简章信息：导师信息、历年分数、就业方向指导、专业信息等."
                        />
                        <Card
                            href="https://www.eol.cn//"
                            title="中国教育在线"
                            body="查看考研频道：备考篇、报考篇、录取篇、互动篇、工具篇。还有搜院校、查专业、找导师等功能."
                        />
                        <Card
                            href="http://www.kaoshidian.com/zhuanti/2016/zhentiln.html/"
                            title="考研历年真题库"
                            body="想查询往年真题，涵盖了历年政治、英语、数学和考研专业课真题."
                        />
                    </ul>
                </div>

                <!-- 页脚 -->
                <footer class="footer">
                    <p>mali@2914420746</p>
                </footer>

                <script>
                    // JavaScript代码，如果需要
                </script>
            </body>
        </html>
    </main></Layout
>
